{% extends 'admin/base.html.twig' %}

{% block admin_title %}Edit User{% endblock %}
{% block page_title %}Edit User: {{ user.name }}{% endblock %}

{% block admin_content %}
<div class="row">
    <div class="col-md-6">
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Update User</button>
                <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}